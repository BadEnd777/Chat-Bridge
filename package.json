{
  "name": "chat-bridge",
  "version": "1.0.0-alpha",
  "description": "Chat Bridge simplifies the integration of Facebook Messenger webhook handling into your Node.js applications.",
  "scripts": {
    "build": "rimraf packages/dist && tsc --skipLibCheck && bun scripts/build.ts",
    "lint": "eslint --ext .ts src",
    "format": "prettier --write \"src/**/*.ts\"",
    "dev": "bun test/development.ts",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "package.json": [
      "bun build"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Onyx-Innovators/Chat-Bridge.git"
  },
  "keywords": [
    "facebook",
    "messenger",
    "webhook",
    "bot",
    "sdk",
    "api",
    "messaging",
    "platform",
    "node",
    "nodejs",
    "typescript",
    "ts"
  ],
  "author": "Onyx Innovators",
  "license": "MIT",
  "bugs": {
    "url": "https:/github.com/Onyx-Innovators/Chat-Bridge/issues"
  },
  "homepage": "https://onyx-innovators.github.io/Chat-Bridge/",
  "dependencies": {
    "@fastify/static": "^6.12.0",
    "@paperdave/logger": "^3.0.1",
    "fastify": "^4.25.2",
    "undici": "^6.2.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.7",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "git-commit-msg-linter": "^5.0.6",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "validate-branch-name": "^1.3.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
